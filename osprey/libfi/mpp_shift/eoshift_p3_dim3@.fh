**************************************************************************
*
*       This is the guts of the routines which handles EOSHIFT on dim 3
*       for all type arrays of rank 3.
*
**************************************************************************


	if (shflag) then
	    if (bndflag) then
cdir$	do shared (i1,i2,i3) on result(i1,i2,i3)
		do i1 = 1, sext(1)
		do i2 = 1, sext(2)
		do i3 = 1, sext(3)
		    sindx = i3 + shftval
		    if (sindx .le. 0 .OR. sindx .gt. sext(3)) then
			result(i1,i2,i3) = bndval
		    else
			result(i1,i2,i3) = source(i1,i2,sindx)
		    endif
		enddo
		enddo
		enddo
	    else
cdir$	do shared (i1,i2,i3) on result(i1,i2,i3)
		do i1 = 1, sext(1)
		do i2 = 1, sext(2)
		do i3 = 1, sext(3)
		    sindx = i3 + shftval
		    if (sindx .le. 0 .OR. sindx .gt. sext(3)) then
			result(i1,i2,i3) = bound(i1,i2)
		    else
			result(i1,i2,i3) = source(i1,i2,sindx)
		    endif
		enddo
		enddo
		enddo
	    endif
	else
	    if (bndflag) then
cdir$	do shared (i1,i2,i3) on result(i1,i2,i3)
		do i1 = 1, sext(1)
		do i2 = 1, sext(2)
		do i3 = 1, sext(3)
		    sindx = i3 + shift(i1,i2)
		    if (sindx .le. 0 .OR. sindx .gt. sext(3)) then
			result(i1,i2,i3) = bndval
		    else
			result(i1,i2,i3) = source(i1,i2,sindx)
		    endif
		enddo
		enddo
		enddo
	    else
cdir$	do shared (i1,i2,i3) on result(i1,i2,i3)
		do i1 = 1, sext(1)
		do i2 = 1, sext(2)
		do i3 = 1, sext(3)
		    sindx = i3 + shift(i1,i2)
		    if (sindx .le. 0 .OR. sindx .gt. sext(3)) then
			result(i1,i2,i3) = bound(i1,i2)
		    else
			result(i1,i2,i3) = source(i1,i2,sindx)
		    endif
		enddo
		enddo
		enddo
	    endif
	endif
