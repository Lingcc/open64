**************************************************************************
*
*       This is the guts of the routines which handles EOSHIFT on dim 3
*	for all type arrays of rank 4.
*
**************************************************************************

	if (shflag) then
	    lshft = mod (shftval, sx(3))
	    if (lshft .ne. 0) then
		if (lshft .lt. 0) then
		    lshft = lshft + sx(3)
		endif
		rshft = sx(3) - lshft
		do i1 = 1, sx(1)
		do i2 = 1, sx(2)
		do i4 = 1, sx(4)
		    do i3 = 1, lshft
			result(i1,i2,i3+rshft,i4) = source(i1,i2,i3,i4)
		    enddo
		    do i3 = lshft+1, sx(3)
			result(i1,i2,i3-lshft,i4) = source(i1,i2,i3,i4)
		    enddo
	        enddo
	        enddo
	        enddo
	    else
		do i1 = 1, sx(1)
		do i2 = 1, sx(2)
		do i3 = 1, sx(3)
		do i4 = 1, sx(4)
		    result(i1,i2,i3,i4) = source(i1,i2,i3,i4)
		enddo
		enddo
		enddo
		enddo
	    endif
	else
	    do i1 = 1, sx(1)
	    do i2 = 1, sx(2)
	    do i4 = 1, sx(4)
		lshft = mod(shift(i1,i2,i4),sx(3))
		if (lshft .ne. 0) then
		    if (lshft .lt. 0) then
			lshft = lshft + sx(3)
		    endif
		    rshft = (sx(3) - lshft) + 1
		    do i3 = 1, lshft
			result(i1,i2,i3+rshft,i4) = source(i1,i2,i3,i4)
		    enddo
		    do i3 = lshft+1, sx(3)
			result(i1,i2,i3-lshft,i4) = source(i1,i2,i3,i4)
		    enddo
		else
		    do i3 = 1, sx(3)
			result(i1,i2,i3,i4) = source(i1,i2,i3,i4)
		    enddo
		endif
	    enddo
	    enddo
	    enddo
	endif
