**************************************************************************
*
*       This is the guts of the routines which handles EOSHIFT on dim 4
*	for all type arrays of rank 7.
*
**************************************************************************

	if (shflag) then
	    lshft = mod (shftval, sx(4))
	    if (lshft .ne. 0) then
		if (lshft .lt. 0) then
		    lshft = lshft + sx(4)
		endif
		rshft = sx(4) - lshft
cdir$	do shared (i1,i2,i3,i5,i6,i7,i4) on source(i1,i2,i3,i4,i5,i6,i7)
		do i1 = 1, sx(1)
		do i2 = 1, sx(2)
		do i3 = 1, sx(3)
		do i5 = 1, sx(5)
		do i6 = 1, sx(6)
		do i7 = 1, sx(7)
		    do i4 = 1, sx(4)
			if (i4 .le. lshft) then
			    result(i1,i2,i3,i4+rshft,i5,i6,i7) =
     &				source(i1,i2,i3,i4,i5,i6,i7)
			else
			    result(i1,i2,i3,i4-lshft,i5,i6,i7) =
     &				source(i1,i2,i3,i4,i5,i6,i7)
			endif
		    enddo
	        enddo
	        enddo
	        enddo
	        enddo
		enddo
		enddo
	    else
cdir$	do shared (i1,i2,i3,i4,i5,i6,i7) on source(i1,i2,i3,i4,i5,i6,i7)
		do i1 = 1, sx(1)
		do i2 = 1, sx(2)
		do i3 = 1, sx(3)
		do i4 = 1, sx(4)
		do i5 = 1, sx(5)
		do i6 = 1, sx(6)
		do i7 = 1, sx(7)
		    result(i1,i2,i3,i4,i5,i6,i7) =
     &			source(i1,i2,i3,i4,i5,i6,i7)
		enddo
		enddo
		enddo
		enddo
		enddo
		enddo
		enddo
	    endif
	else
cdir$	do shared (i1,i2,i3,i5,i6,i7,i4) on source(i1,i2,i3,i4,i5,i6,i7)
	    do i1 = 1, sx(1)
	    do i2 = 1, sx(2)
	    do i3 = 1, sx(3)
	    do i5 = 1, sx(5)
	    do i6 = 1, sx(6)
	    do i7 = 1, sx(7)
		do i4 = 1, sx(4)
		    lshft = mod(shift(i1,i2,i3,i5,i6,i7),sx(4))
		    if (lshft .ne. 0) then
			if (lshft .lt. 0) then
			    lshft = lshft + sx(4)
			endif
			if (i4 .le. lshft) then
			    rshft = (sx(4) - lshft)
			    result(i1,i2,i3,i4+rshft,i5,i6,i7) =
     &				source(i1,i2,i3,i4,i5,i6,i7)
			else
			    result(i1,i2,i3,i4-lshft,i5,i6,i7) =
     &				source(i1,i2,i3,i4,i5,i6,i7)
			endif
		    else
			result(i1,i2,i3,i4,i5,i6,i7) =
     &				source(i1,i2,i3,i4,i5,i6,i7)
		    endif
		enddo
	    enddo
	    enddo
	    enddo
	    enddo
	    enddo
	    enddo
	endif
